<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Playlist">
	<insert id="addPlaylist" parameterType="playlist" useGeneratedKeys="true" keyProperty="playlistID">
		insert into lms_playlist (playlistName, creatorEmail)
		values
		(#{playlistName}, #{creatorEmail})
	</insert>
	
	<delete id="deletePlaylist">
		delete from lms_playlist where playlistID=#{playlistID}
	</delete>
	
	<select id="getPlaylist" resultType="playlist">
		select * from lms_playlist where playlistID=#{playlistID}
	</select>
	
	<select id="getAllPlaylist" resultType="playlist">
		select * from lms_playlist order by playlistID
	</select>
</mapper>